<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/loginFragment">

        <fragment
                android:id="@+id/loginFragment"
                android:name="com.sanga.schoolwash.UI.LoginFragment"
                android:label="fragment_login"
                tools:layout="@layout/fragment_login" >
                <action
                        android:id="@+id/action_loginFragment_to_registerFragment"
                        app:destination="@id/registerFragment" />
        </fragment>
        <fragment
                android:id="@+id/homeFragment"
                android:name="com.sanga.schoolwash.UI.HomeFragment"
                android:label="fragment_home"
                tools:layout="@layout/fragment_home" >
                <action
                        android:id="@+id/action_homeFragment_to_helpFragment"
                        app:destination="@id/helpFragment" />
                <action
                        android:id="@+id/action_homeFragment_to_reportFragment"
                        app:destination="@id/reportFragment" />
                <action
                        android:id="@+id/action_homeFragment_to_formFragment"
                        app:destination="@id/formFragment" />
        </fragment>
        <fragment
                android:id="@+id/formFragment"
                android:name="com.sanga.schoolwash.UI.FormFragment"
                android:label="fragment_form"
                tools:layout="@layout/fragment_form" />
        <fragment
                android:id="@+id/helpFragment"
                android:name="com.sanga.schoolwash.UI.HelpFragment"
                android:label="fragment_help"
                tools:layout="@layout/fragment_help" />
        <fragment
                android:id="@+id/reportFragment"
                android:name="com.sanga.schoolwash.UI.ReportFragment"
                android:label="fragment_report"
                tools:layout="@layout/fragment_report" />
        <fragment
                android:id="@+id/registerFragment"
                android:name="com.sanga.schoolwash.UI.RegisterFragment"
                android:label="fragment_register"
                tools:layout="@layout/fragment_register" />
</navigation>